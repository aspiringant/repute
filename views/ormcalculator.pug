extends layout

block content
  .page-header
    h3 ORM Calculator

  form.form-horizontal(method='POST',action='/ormcalculator/getscore')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='name') Company Name
      .col-sm-8
        input.form-control(type='text', name='name', id='name', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='url') URL
      .col-sm-8
        input.form-control(type='text', name='url', id='url')
    .form-group
      label(class='col-sm-2 control-label', for='sector') Sector
      .col-sm-8
        input.form-control(type='text', name='sector', id='sector' )
    .form-group
      label(class='col-sm-2 control-label', for='location') Location
      .col-sm-8
        input.form-control(type='text', name='location', id='location' )
    .form-group
      label(class='col-sm-2 control-label', for='fblink') FB Page Link
      .col-sm-8
        input.form-control(type='text', name='fblink', id='fblink' )
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-envelope
          | Send
